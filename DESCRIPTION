Package: beekeeper
Title: Rapidly Scaffold API Client Packages
Version: 0.1.0.9000
Authors@R: c(
    person("Jon", "Harmon", , "jonthegeek@gmail.com", role = c("aut", "cre", "cph"),
           comment = c(ORCID = "0000-0003-4781-4346")),
    person("R Consortium", role = "fnd")
